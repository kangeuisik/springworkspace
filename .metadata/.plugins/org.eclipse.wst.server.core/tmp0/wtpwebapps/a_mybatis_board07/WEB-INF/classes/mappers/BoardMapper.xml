<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jafa.repository.BoardRepository">

	<sql id="condition">
		<trim prefix="and">
	    	<choose>
	    		<when test="type=='T'.toString">
	    			title like '%'||#{keyword}||'%'
	    		</when>
	    		<when test="type=='C'.toString">
	    			content like '%'||#{keyword}||'%'
	    		</when>
	    		<when test="type=='W'.toString">
	    			writer like '%'||#{keyword}||'%'
	    		</when>
	    	</choose>
	    </trim>
    	<if test="category!=null and category!=''">
    		and category = #{category}
    	</if>
	</sql>

	<!-- 전체 게시물 수 -->
  <select id="getTotalCount" resultType="int">
    select count(*) from board_my7
    <where>
		<include refid="condition"/>
    </where> 
  </select> 
  
  	<!--  -->
  <select id="list" resultType="board">
  	<![CDATA[
	  select 
	    rn, bno, category, title, content, writer, writeDate
	from
	(
	    select 
	        /*+ index_desc(board_my7 pk_board_my7) */
	        rownum as rn, bno, category, title, content, writer, writeDate
	    from 
	        board_my7
	    where rownum <= #{maxRow}
	]]>
		<include refid="condition"/>
	<![CDATA[    
	) 
	where rn > #{minRow}
	]]> 
  </select>
  
  
</mapper>